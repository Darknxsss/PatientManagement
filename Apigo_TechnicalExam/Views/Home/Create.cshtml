@model Apigo_TechnicalExam.Patient

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<h2>Add New Patient</h2>
@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label>First Name</label> @Html.ValidationMessageFor(m => m.firstName, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.firstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Middle Name</label> @Html.ValidationMessageFor(m => m.middleName, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.middleName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Last Name</label> @Html.ValidationMessageFor(m => m.lastName, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.lastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Suffix (if any)</label>
        @Html.TextBoxFor(m => m.suffixName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Birth Date</label> @Html.ValidationMessageFor(m => m.birthDate, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.birthDate, new { @class = "form-control", type = "date", required = "required" })
    </div>
    <div class="form-group">
        <label>Gender</label> @Html.ValidationMessageFor(m => m.gender, "", new { @class = "text-danger" })
        @Html.DropDownListFor(m => m.gender, new SelectList(new[] { "Male", "Female" }), "Select Gender", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Initial Diagnosis</label> @Html.ValidationMessageFor(m => m.initialDiagnosis, "", new { @class = "text-danger" })
        @Html.TextAreaFor(m => m.initialDiagnosis, new { @class = "form-control", rows = 4 })
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-2">Cancel</a>
}
